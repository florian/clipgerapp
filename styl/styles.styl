main-blue = #1188E6
dark-blue = #2E4358
light-blue = #D7EBFB

*
	margin: 0
	padding: 0
	font-family: "Open Sans", sans-serif
	-webkit-font-smoothing: antialiased

.container
	max-width: 1200px
	width: 100%
	margin: 0 auto
	box-sizing: border-box

header
	padding-top: 50px
	border-top: 10px solid rgba(0,0,0,.3)
	text-align: center
	background-color: main-blue
	color: white
	text-shadow: 1px 1px rgba(0,0,0,.3)

	.container
		max-width: 800px
		padding: 0 15px

	h1
		padding: 10px
		display: inline-block
		font-size: 55px
		font-weight: 500
		cursor: default

		span
			font-weight: 500

	h2
		padding: 5px
		font-size: 23px
		font-weight: 500
		transition: color .5s ease-out

		.clip, .ger
			color: white

	&.show-explination
		h2
			color: #9DC0DC

.img-overlay
	position: relative
	padding-top: 50px
	max-width: 1200px
	margin: 0 auto
	width: 100%

	img
		box-shadow: 0 0 50px rgba(0,0,0,.3)
		-webkit-user-select: none

	.left-header-img, .right-header-img
		z-index: 10
		position: absolute
		bottom: 0
		max-width: 600px
		width: 50%

	.left-header-img
		left: 0

	.right-header-img
		right: 0

	.center-header-img
		z-index: 20
		position: relative
		top: 5px
		max-width: 800px
		width: 66.666%
		margin: 0 auto

.appstore
	margin: 0 auto
	height: 80px
	line-height: 80px
	font-size: 22px
	background-color: light-blue
	padding: 10px
	box-shadow: inset 0 0 12px rgba(0,0,0,.5)

	.container
		max-width: 490px

	.slogan
		position: relative
		margin-right: 20px

	.get-it
		width: 250px
		height: 61px
		border-radius: 7px
		font-size: 19px
		margin: 0 auto
		background-image: linear-gradient(to top,#212121,#636161)
		outline: 0
		cursor: pointer
		border: 1px solid #000
		color: #e0e0e0
		display: inline-block
		line-height: 61px
		text-decoration: none
		font-weight: 700
		text-align: center
		opacity: .95

		&:hover
			opacity: 1

		&:active
			position: relative
			top: 2px

ul
	list-style: none

.overview
	li
		background-color: dark-blue
		color: white

	.container
		padding: 50px

		&:after
			content: ''
			clear: both
			display: block

	img
		max-width: 504px
		width: 42%
		box-shadow: 0 0 50px rgba(0,0,0,.5)

	.description
		float: right
		box-sizing: border-box
		max-width: 696px
		padding-top: 50px
		width: 58%
		padding-top: 50px
		padding-left: 50px
		line-height: 2

	.long-overview-item
		.description
			padding-top: 20px

	.very-long-overview-item
		.description
			padding-top: 0

	p
		padding-top: 10px
		opacity: .85

	.gallery-link
		color: #8BB6FB
		border-bottom: 2px solid
		cursor: pointer

		&:hover
			color: lighten(@color, 10%)

	li:nth-child(2n)
		background-color: light-blue
		color: black

		img
			float: right

		.description
			float: left
			padding-left: 0
			padding-right: 50px

		kbd
			border-color: #545454

		.gallery-link
			color: #0C3A56

			&:hover
				color: lighten(@color, 10%)

kbd
	background-color: #dadada
	color: black
	padding: 2px 10px
	border-radius: 7px
	border: 1px solid #020406
	border-bottom-width: 4px
	font-size: 13px
	position: relative
	top: -2px

.features
	// background-color: #E1E8EF
	background-color: main-blue
	color: white
	text-align: center

	h3
		font-size: 35px
		padding: 50px

	li
		display: inline-block
		width: 33%
		height: 250px
		box-sizing: border-box
		padding: 0 30px
		overflow: hidden

	h4
		padding-bottom: 10px
		font-size: 16px
		font-weight: 700

	p
		line-height: 2
		opacity: .85

	kbd
		border-color: #545454

	.gallery-link
		font-weight: bold
		cursor: pointer
		border-bottom: 1px solid white

.images
	background-color: dark-blue
	color: white
	text-align: center

	.container
		max-width: 1460px

	ul
		overflow: hidden

		&.limited
			height: 300px

	h3
		font-size: 35px
		padding-top: 50px
		padding-bottom: 10px

	p
		opacity: .85
		font-size: 16px

	li
		display: inline-block
		padding: 30px

	img
		box-shadow: 0 0 20px rgba(0,0,0,.3)
		transition: box-shadow .5s ease-out
		cursor: pointer

		&:hover, &:active
			box-shadow: 0 0 20px rgba(255, 255, 255, .5)

	.show-all-images
		display: none
		padding-top: 20px
		padding-bottom: 50px
		cursor: pointer
		opacity: .7
		transition: opacity .5s linear

		&:hover
			opacity: 1

@require './responsive.styl'
