main-blue = #1188E6
dark-blue = #2E4358
light-blue = #D7EBFB

*
	margin: 0
	padding: 0
	font-family: "Open Sans", sans-serif
	-webkit-font-smoothing: antialiased

.container
	width: 1200px
	margin: 0 auto
	box-sizing: border-box

header
	padding-top: 50px;
	border-top: 10px solid rgba(0,0,0,.3)
	text-align: center;
	background-color: main-blue
	color: white
	text-shadow: 1px 1px rgba(0,0,0,.3)

	.container
		max-width: 800px;
		width: 100%;
		padding: 0 15px

	h1
		padding: 10px
		font-size: 55px
		font-weight: 500

		span
			font-weight: 500

	h2
		padding: 5px
		font-size: 23px
		font-weight: 500

.img-overlay
	position: relative
	padding-top: 50px
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;

	img
		box-shadow: 0 0 50px rgba(0,0,0,.3);
		-webkit-user-select: none

	.left-header-img, .right-header-img
		z-index: 10
		position: absolute
		bottom: 0
		max-width: 600px
		width: 50%

	.left-header-img
		left: 0

	.right-header-img
		right: 0

	.center-header-img
		z-index: 20
		position: relative
		top: 5px
		max-width: 800px
		width: 75%
		margin: 0 auto

.appstore
	margin: 0 auto;
	height: 80px;
	line-height: 80px;
	font-size: 22px;
	background-color: light-blue
	padding: 10px
	box-shadow: inset 0 0 12px rgba(0,0,0,.5)

	.container
		max-width: 490px
		width: 100%

	.slogan
		position: relative;
		top: -11px;
		margin-right: 20px;

	img
		width: 250px;
		position: relative;
		top: 9px;

ul
	list-style: none

.overview
	li
		background-color: dark-blue
		color: white

		&:nth-child(2n)
			background-color: light-blue
			color: black

			img
				float: right

			.description
				float: left

			kbd
				border-color: #545454;

		.container:after
			content: ''
			clear: both
			display: block

	.container
		padding: 50px

	img
		box-shadow: 0 0 50px rgba(0,0,0,.5)

	.description
		float: right
		width: 500px
		padding-top: 50px;
		line-height: 2;

	.long-overview-item
		.description
			padding-top: 20px

	.very-long-overview-item
		.description
			padding-top: 0

	p
		padding-top: 10px
		opacity: .85

kbd
	background-color: #dadada;
	color: black
	padding: 2px 10px;
	border-radius: 7px;
	border: 1px solid black
	border-bottom-width: 4px;
	font-size: 13px;
	position: relative;
	top: -2px;

.features
	// background-color: #E1E8EF
	background-color: main-blue
	color: white
	text-align: center;

	h3
		font-size: 35px;
		padding: 50px;

	li
		display: inline-block;
		width: 33%;
		height: 250px;
		box-sizing: border-box;
		padding: 0 30px;
		overflow: hidden;

	h4
		padding-bottom: 10px;
		font-size: 16px;
		font-weight: 700;

	p
		line-height: 2
		// color: #2F2F2F;
		opacity: .85

	kbd
		border-color: #545454;

.images
	background-color: dark-blue
	color: white
	text-align: center

	.container
		width: 1460px

	h3
		font-size: 35px;
		padding-top: 50px;
		padding-bottom: 10px

	p
		opacity: .85
		font-size: 16px

	li
		display: inline-block
		padding: 30px

	img
		box-shadow: 0 0 20px rgba(0,0,0,.3);
		transition: box-shadow .5s ease-out
		cursor: pointer

		&:hover
			box-shadow: 0 0 20px rgba(255, 255, 255, .5)

@require './responsive.styl'
